rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }

    match /users/{uid} {
      allow read, write: if isSignedIn() && request.auth.uid == uid;
    }

    match /reports/{id} {
      allow read, write: if isSignedIn();
      match /votes/{uid} {
        allow read, write: if isSignedIn() && request.auth.uid == uid;
      }
    }
  }
}
